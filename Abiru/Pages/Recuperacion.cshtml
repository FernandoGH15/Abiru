@page
@model Abiru.Pages.RecuperacionModel
@{
}
<div id="app" class="container">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <img src="~/lib/imgs/pinkbear.jpg" style="width: 550px;" />
                </div>
                <div class="col">
                    <div class="text-center">
                        <h4>Olvide mi contraseña</h4>
                    </div>
                    <form>
                        <div class="form-group">
                            <label for="InputUsuario">Usuario</label>
                            <input type="email" v-model="usuario.email" class="form-control" id="Usuario" aria-describedby="Usuario">
                        </div>
                        <br />
                        <div class="text-center">
                            <p>----------o----------</p>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="InputEmail">Correo</label>
                            <input type="email" v-model="usuario.nombre" class="form-control" id="Email" aria-describedby="Email">
                        </div>
                        <br />
                        <div class="text-center">
                            <button type="button" v-on:click="Olvido" class="btn btn-primary">Recuperar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vue-resource@1.5.3"></script>

<script>
    new Vue({
        el: "#app",
        data: {
            usuario: {
                id: 0,
                nombre: "",
                email: "",
                dni: "",
                pass: "",
                categoria: "",
                distrito: 0
            },
            infor: []
        },
        mounted: function() {

        },
        methods: {
            Olvido: function() {
                var url = "https://localhost:7048/api/Abiru/Olvido";
                this.$http.post(url, this.usuario).then(function(response) {
                    this.infor = response.body;
                    alert("En este caso la contraseña se envia al siguiente correo:" + this.infor.email);
                });
            }
        }

    })
</script>